@model MusicFall2016.Models.Artist

@{ ViewData["Title"] = "Add Artist";}
<script src="~/lib/jquery/dist/jquery.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<h2>Add Artists</h2>
<div class="form">
    <form asp-action="Create" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Bio" class="form-control"/>
            </div>
        </div>
        <button type="submit" class="btn-success btn-lg">Submit</button>
    </form>
</div>
