@model MusicFall2016.Models.Artist

@{ ViewBag.Title = "Edit Artist"; }

<h2>Edit Artist</h2>
<div class="form">

    <form asp-action="Edit" class="form-horizontal">
        <input type="hidden" asp-for="ArtistID" />
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Bio" class="col-sm-2 sontrol-label"></label>
            <div class="col-sm-10">
                <input asp-for="Bio" class="form-control" autofocus />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn-success btn-lg" />
                <a class="btn btn-default" href="http://localhost:2264/Artist">Back To list</a>
            </div>
        </div>
    </form>
</div>

